<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:BaseballScoringApp.ViewModels"
             x:Class="BaseballScoringApp.PlayerStatisticsContentPage"
             Title="PlayerStatisticsContentPage">
    <ContentPage.BindingContext>
        <viewmodels:PlayerStatisticsContentPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="This is the player selection content page ! Add all stats for selected player here and use button to return to selection"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Back" Clicked="Button_Clicked"   ></Button>
    </VerticalStackLayout>
</ContentPage>