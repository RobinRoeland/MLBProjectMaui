<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseballScoringApp.TestPage"
             Title="TestPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="GetPlayers" Clicked="ButtonGetPlayers_Clicked" x:Name="BtnFetchPlayers"></Button>
        <Button Text="detailPlayer" Clicked="ButtondetailPlayer_Clicked" x:Name="BtnFetchDetailPlayer"></Button>
        <Button Text="ImportTeamsFromMLB" Clicked="ButtonImportTeams_Clicked" x:Name="BtnImportMLBTeams"></Button>
        <Button Text="ImportTeamsFromCSV" Clicked="ButtonImportTeamsCSV_Clicked" x:Name="BtnImportMLBTeamsCSV"></Button>
        <Button Text="ImportRosterFromMLB" Clicked="ButtonImportRoster_Clicked" x:Name="BtnImportMLBRoster"></Button>
        <Button Text="ImportRosterFromCSV" Clicked="ButtonImportRosterCSV_Clicked" x:Name="BtnImportMLBRosterCSV"></Button>
    </VerticalStackLayout>
</ContentPage>