<?xml version="1.0" encoding="utf-8" ?>
<communityToolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:communityToolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    x:Class="BaseballScoringApp.PopupDialog_ShowBoard">
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <!-- Blocking Overlay -->
        <VerticalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                                 Margin="10"  >
                <Label Text="Message." x:Name="MessageLabel" 
                       FontAttributes="Bold"
                       FontSize="22" TextColor="IndianRed" HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
        </VerticalStackLayout>
        
    </Grid>
</communityToolkit:Popup>