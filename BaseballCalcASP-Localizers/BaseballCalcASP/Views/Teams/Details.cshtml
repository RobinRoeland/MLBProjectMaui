@model BaseballModelsLib.Models.Team

@{
    ViewData["Title"] = @Localizer["Details"];
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["Team"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["TotalPlayers"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPlayers)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"] | </a>
    }
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>
