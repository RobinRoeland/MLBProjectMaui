@model BaseballModelsLib.Models.Team

@{
    ViewData["Title"] = @Localizer["Add"];
}

<h1>@Localizer["Add"]</h1>

<h4>@Localizer["Team"] @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPlayer">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">@Localizer["Player"]</label>
                <select name="playerid" asp-items="ViewBag.Players" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localizer["Save"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>
