@model BaseballModelsLib.Models.Player

@{
    ViewData["Title"] = @Localizer["Details"];
}
<style>
    character {
        display: flex;
        background: LightGray;
        box-shadow: 5px 5px Gray;
        flex: 1 0 auto;
    }

    #characterPic {
        user-select: none;
        height: 50%;
        margin-right: 5%;
    }
    main {
        display: flex;
    }
    name {
        user-select: none;
        font-weight: bold;
    }

    name p {
        user-select: text;
        font-weight: 100;
        margin-left: 20px;
    }

    column {
        margin: 3%;
        display: flex;
        flex-direction: column;
        flex: 1 0 auto;
    }

    row {
        display: flex;
        flex-direction: row;
    }

</style>
<character>
    <column>
        <row>
            <img id="characterPic" src="https://www.shareicon.net/data/512x512/2016/07/21/799345_user_512x512.png" />
            <column>
                <name>@Localizer["Name"]<p>@Html.DisplayFor(model => model.Name)</p></name>
                <name>@Localizer["Age"]<p>@(DateTime.Now.Year - Model.DOB.Year)</p></name>
                <name>@Localizer["DOB"]<p>@Html.DisplayFor(model => model.DOB)</p></name>
                <name>@Localizer["Team"]<p>@Html.DisplayFor(model => model.Team.Name)</p></name>
            </column>
        </row>
        <hr/>
        <div style="user-select:none;">
            @if (User.IsInRole("admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"] |</a>
            }
            <a asp-action="Index">@Localizer["BackToList"]</a>
        </div>
    </column>
</character>